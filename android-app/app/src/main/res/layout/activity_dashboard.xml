<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Score logs"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<TextView
    android:id="@+id/fusionTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Fusion Title" />
<TextView
    android:id="@+id/riskLevel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Risk Level" />
<com.github.mikephil.charting.charts.PieChart
    android:id="@+id/touchPieChart"
    android:layout_width="match_parent"
    android:layout_height="200dp" />
<com.github.mikephil.charting.charts.PieChart
    android:id="@+id/typingPieChart"
    android:layout_width="match_parent"
    android:layout_height="200dp" />
<com.github.mikephil.charting.charts.PieChart
    android:id="@+id/usagePieChart"
    android:layout_width="match_parent"
    android:layout_height="200dp" />
<com.github.mikephil.charting.charts.LineChart
    android:id="@+id/fusionHistoryChart"
    android:layout_width="match_parent"
    android:layout_height="200dp" />

</LinearLayout>
